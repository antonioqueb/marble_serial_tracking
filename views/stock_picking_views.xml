<odoo>
    <!-- Vista para entregas (OUTGOING) -->
    <record id="view_picking_form_outgoing_marble" model="ir.ui.view">
        <field name="name">stock.picking.form.marble.outgoing</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/list/field[@name='product_id']" position="after">
                <field name="lot_id" readonly="1"/>
                <field name="marble_height" readonly="1"/>
                <field name="marble_width" readonly="1"/>
                <field name="marble_sqm" readonly="1"/>
                <field name="lot_general" readonly="1"/>
            </xpath>
        </field>
        <field name="inherit_mode">primary</field>
        <field name="active">True</field>
        <field name="domain">[('picking_type_code','=','outgoing')]</field>
    </record>

    <!-- Vista para recepciones (INCOMING) sin lot_id -->
    <record id="view_picking_form_incoming_marble" model="ir.ui.view">
        <field name="name">stock.picking.form.marble.incoming</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="priority" eval="89"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/list/field[@name='product_id']" position="after">
                <field name="marble_height" readonly="1"/>
                <field name="marble_width" readonly="1"/>
                <field name="marble_sqm" readonly="1"/>
                <field name="lot_general" readonly="1"/>
            </xpath>
        </field>
        <field name="inherit_mode">primary</field>
        <field name="active">True</field>
        <field name="domain">[('picking_type_code','=','incoming')]</field>
    </record>
</odoo>
